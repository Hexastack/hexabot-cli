{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020", // Change to ES2020 or ESNext
    "moduleResolution": "node", // Ensure module resolution is node
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
